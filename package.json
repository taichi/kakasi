{
  "name": "kakasi",
  "version": "0.0.1",
  "description": "slack bot",
  "main": "lib/index.js",
  "author": "taichi",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/nearley": "^2.11.0",
    "@types/node": "^8.5.2",
    "ava": "^0.24.0",
    "ava-ts": "^0.23.0",
    "cross-env": "^5.1.3",
    "nearley": "^2.11.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1"
  },
  "scripts": {
    "build": "run-s clear lint compile test",
    "clear": "rimraf lib coverage .nyc_output",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "compile": "run-p compile:*",
    "compile:ts": "tsc",
    "compile:parser": "nearleyc src/grammar.ne -o src/grammar.js",
    "test": "ava-ts test/**/*.test.ts",
    "test:parser": "ava-ts test/**/parser.test.ts",
    "watch:test": "ava-ts --watch test/**/*.test.ts",
    "cover": "nyc ava-ts test/**/*.test.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
