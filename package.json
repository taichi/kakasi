{
  "name": "kakasi",
  "version": "0.0.1",
  "description": "slack bot",
  "main": "lib/index.js",
  "author": "taichi",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "mersenne-twister": "^1.1.0",
    "moment": "^2.20.1",
    "sqlite": "^2.9.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@slack/client": "^3.15.0",
    "@types/jest": "^22.0.1",
    "@types/mersenne-twister": "^1.1.2",
    "@types/moment": "^2.13.0",
    "@types/nearley": "^2.11.0",
    "@types/node": "^8.5.2",
    "@types/ws": "^4.0.0",
    "cp-file-cli": "^1.0.1",
    "cross-env": "^5.1.3",
    "jest": "^22.1.4",
    "nearley": "^2.11.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1"
  },
  "scripts": {
    "build": "run-s clear lint compile test",
    "clear": "rimraf lib coverage .nyc_output",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "compile": "run-p compile:*",
    "compile:ts": "tsc",
    "compile:parser": "nearleyc src/grammar.ne -o src/grammar.ts",
    "grammer": "run-s compile:parser test:parser",
    "graph": "nearley-railroad src/math.ne -o grammar.html",
    "test": "jest",
    "test:parser": "jest test/parser.test.ts",
    "test:command": "jest test/command/",
    "watch:test": "jest --watch",
    "cover": "jest --coverage",
    "clibot": "ts-node test/bot/clibot.ts config.json",
    "slackbot": "ts-node src/bot/slackbot.ts config.json",
    "postinstall": "cp-file patch/slack.d.ts node_modules/@slack/client/index.d.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
